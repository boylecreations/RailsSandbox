<div class="container">
	<div class="row">
		<div class="col-sm-12">
			<p>
			  <strong>Title:</strong>
			  <%= @article.title %>
			</p>
			 
			<p>
			  <strong>Text:</strong>
			  <%= @article.text %>
			</p>

			<h2>Add a comment:</h2>
			<%= form_for([@article, @article.comments.build]) do |f| %>
			  <p>
			    <%= f.label :commenter %><br>
			    <%= f.text_field :commenter %>
			  </p>
			  <p>
			    <%= f.label :body %><br>
			    <%= f.text_area :body %>
			  </p>
			  <p>
			    <%= f.submit %>
			  </p>
			<% end %>

			<%= link_to 'Edit', edit_article_path(@article), { :class=>"btn btn-default" } %>
			<%= link_to 'Back', articles_path, { :class=>"btn btn-default" } %>

			<%= render 'comment' %>
			
		</div>
	</div>
</div>