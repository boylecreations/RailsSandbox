<%= form_for([@article, @article.comments.build]) do |f| %>

  <div class="form-group">
    <%= f.label :commenter %><br>
    <%= f.text_field :commenter %>
  </div>
  
  <div class="form-group">
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </div>
  
  <div class="form-group">
   <p>
    <%= f.submit 'Create', :class => 'btn btn-success' %>
  </p>
  </div>
 
<% end %>
